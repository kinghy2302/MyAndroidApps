<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" xmlns:vc="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:clickable="false">

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="50dp"
        android:padding="20dp"
        android:orientation="horizontal">
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="上肢"
            android:id="@+id/radioButton"
            android:checked="true"
            android:textSize="30dp" />
        <RadioButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="50dp"
            android:text="下肢"
            android:id="@+id/radioButton3"
            android:checked="false"
            android:textSize="30dp"/>
    </RadioGroup>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左四头肌"
        android:id="@+id/checkBox"
        android:layout_below="@+id/radioGroup"
        android:layout_alignLeft="@+id/radioGroup"
        android:layout_alignStart="@+id/radioGroup"
        android:layout_marginTop="113dp"
        android:checked="true"
        android:textSize="30dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/checkBox2"
        android:checked="true"
        android:text="左腘绳肌"
        android:textSize="30dp"
        android:layout_marginLeft="40dp"
        android:layout_alignTop="@+id/checkBox"
        android:layout_toRightOf="@+id/checkBox"
        android:layout_toEndOf="@+id/checkBox" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左臀大肌"
        android:id="@+id/checkBox3"
        android:checked="true"
        android:textSize="30dp"
        android:layout_alignTop="@+id/checkBox2"
        android:layout_toRightOf="@+id/checkBox2"
        android:layout_toEndOf="@+id/checkBox2"
        android:layout_marginLeft="47dp" />

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="左跖肌"
        android:id="@+id/checkBox4"
        android:layout_toEndOf="@+id/checkBox3"
        android:layout_marginLeft="54dp"
        android:checked="true"
        android:textSize="30dp"
        android:layout_alignTop="@+id/checkBox3"
        android:layout_toRightOf="@+id/checkBox3" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText"
        android:layout_marginTop="152dp"
        android:layout_toStartOf="@+id/checkBox4"
        android:layout_below="@+id/checkBox2"
        android:layout_alignLeft="@+id/checkBox2"
        android:layout_alignStart="@+id/checkBox2"
        android:layout_toLeftOf="@+id/checkBox4"
        android:textSize="30dp" />

    <com.vince.myapplication.VinceUI
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="方案名称："
        android:id="@+id/textView"
        android:layout_alignBottom="@+id/editText"
        android:layout_alignLeft="@+id/checkBox"
        android:layout_alignStart="@+id/checkBox"
        android:textSize="30dp"
        vc:num="2"
        vc:col="@android:color/holo_green_light"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="timePicker"
        android:id="@+id/customTimePicker"
        android:layout_alignBottom="@+id/radioGroup"
        android:layout_alignLeft="@+id/checkBox3"
        android:layout_alignStart="@+id/checkBox3" />
</RelativeLayout>
